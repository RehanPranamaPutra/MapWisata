<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cardWisata"
        app:cardCornerRadius="25dp"
        >
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/imgWisata"
                android:src="@drawable/gambar1"
                android:scaleType="centerCrop"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Tempat Wisata"
                android:layout_marginLeft="10sp"
                android:layout_toRightOf="@id/imgWisata"
                android:id="@+id/txtNamaWisata"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Lokasi"
                android:id="@+id/txtAlamat"
                android:layout_toRightOf="@id/imgWisata"
                android:layout_below="@+id/txtNamaWisata"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="5sp"/>

        </RelativeLayout>
        
    </androidx.cardview.widget.CardView>

</LinearLayout>